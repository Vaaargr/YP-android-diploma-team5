<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBold32">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/font_32</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMedium22">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextMedium16">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextRegular16">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextRegular12">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:titleTextAppearance">@style/TextMedium22</item>
        <item name="theme">@style/Theme.PracticumAndroidDiploma</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TeamBigTextStyle">
        <item name="android:textAppearance">@style/TextBold32</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TeamNormalTextStyle" parent="TeamBigTextStyle">
        <item name="android:textAppearance">@style/TextMedium16</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemTextColor">@drawable/icon_color_bn</item>
        <item name="itemIconTint">@drawable/icon_color_bn</item>
        <item name="itemTextAppearanceActive">@style/TextRegular12</item>
        <item name="itemTextAppearanceInactive">@style/TextRegular12</item>
        <item name="theme">@style/Theme.PracticumAndroidDiploma</item>
    </style>

    <style name="VacancyHeadline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="android:layout_marginTop">@dimen/dp_28</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="PlaceholderMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:textColor">@color/black_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:padding">@dimen/dp_44</item>
        <item name="android:drawablePadding">@dimen/dp_16</item>
        <item name="android:textAlignment">center</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="ChipMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="fontWeight">400</item>
    </style>

</resources>
